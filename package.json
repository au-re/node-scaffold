{
  "name": "nodelib-scaffold",
  "description": "Bootstrap development with a simple structure for your node module or library",
  "main": "src/index.js",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "start": "node_modules/.bin/nodemon",
    "test": "istanbul cover -x *.test.js _mocha",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "commit": "git-cz",
    "generate-doc": "node_modules/.bin/jsdoc --configure jsdoc.json --verbose",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/au-re/nodelib-scaffold"
  },
  "keywords": [
    "template",
    "npm",
    "library"
  ],
  "author": "Aur√©lien Franky <gushonau@student.gu.se> (https://au-re.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/au-re/nodelib-scaffold/issues"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.5.0",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.3",
    "istanbul": "^0.4.2",
    "jsdoc": "^3.4.0",
    "minami": "^1.1.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.0",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm test"
    }
  }
}
